{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["/src/*", "/netlify/functions/*"]
    }
  },
  "include": ["src/**/*", "netlify/functions/**/*"],
  "exclude": ["node_modules"]
}
